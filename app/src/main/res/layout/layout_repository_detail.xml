<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/owner_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@+id/owner_information_label"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/owner_information_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_information"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/owner_information"/>

    <TextView android:id="@+id/owner_login"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:textSize="@dimen/details_text_size"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              app:layout_constraintEnd_toStartOf="@+id/owner_avatar"
              app:layout_constraintTop_toBottomOf="@+id/owner_information_label"
              app:layout_constraintStart_toStartOf="parent"
              tools:text="Owner : Ashanen"/>

    <TextView android:id="@+id/owner_id"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:textSize="@dimen/details_text_size"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/owner_login"
              app:layout_constraintEnd_toStartOf="@+id/owner_avatar"
              tools:text="Id: 30993768"/>

    <TextView android:id="@+id/owner_type"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:textSize="@dimen/details_text_size"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              app:layout_constraintTop_toBottomOf="@+id/owner_id"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/owner_avatar"
              tools:text="type: User"/>

    <TextView
            android:id="@+id/repository_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:textSize="@dimen/label_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/owner_type"
            android:text="@string/repository_info"/>

    <TextView
            android:id="@+id/full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/details_text_size"
            app:layout_constraintTop_toBottomOf="@+id/repository_info_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Full_name : Ashanen/Advanced-Calculator-Cpp-Visual-Studio"/>

    <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/details_text_size"
            app:layout_constraintTop_toBottomOf="@+id/full_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Description : "/>

</androidx.constraintlayout.widget.ConstraintLayout>